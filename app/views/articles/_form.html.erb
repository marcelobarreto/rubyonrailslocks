
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :text %>

    <% if @new_version %>
      <%= f.input :version, as: :hidden, input_html: { value: @new_version.version } %>
      <div>
        <p>New version available</p>
        <p>Title</p>
        <span><%= @new_version&.title %></span>
        <p>Text</p>
        <span><%= @new_version&.text %></span>
      </div>
    <% else %>
      <%= f.input :version, as: :hidden, input_html: { value: @article.version } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
